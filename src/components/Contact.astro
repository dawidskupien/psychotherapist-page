---
import MapTab from "./MapTab.tsx";
import Container from "./ui/container.astro";
import ContactForm from "./ContactForm.tsx";
import { getContactSection } from "../lib/api.ts";
import ContactIcons from "./ContactIcons";
const contactSection = await getContactSection();
const contact = contactSection[0];
---

<Container id="contact">
    <h2 class="text-3xl font-bold sm:text-4xl mb-[1rem]">{contact.title}</h2>
    <div class="h-[2px] w-8 bg-[#73CEA7] " />
        <div class="flex flex-col xl:flex-row max-w-[1280px] mt-[1rem]">
            <div class="w-full">
                <p class="leading-7 max-w-[50ch] text-gray-800">{contact.description}</p>
                <ContactIcons client:load />
                <MapTab client:load />
            </div>
            <ContactForm client:load />
        </div>
</Container>
